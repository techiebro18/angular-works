# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_brace_style = K&R
indent_size = 2
indent_style = space
insert_final_newline = true
quote_type = single
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
